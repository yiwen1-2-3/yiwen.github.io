    <footer class="py-8 border-t border-gray-800">
        <div class="max-w-4xl mx-auto px-4 text-center text-gray-500 text-sm">
            <p>&copy; 2024 本內容僅供參考，不構成任何法律或稅務建議。具體個案請諮詢合格律師或會計師。</p>
        </div>
    </footer>

    <script>
    document.addEventListener('DOMContentLoaded', function () {
        
        // 1. 副標題輪播
        const subtitles = [
            "保險節稅糖衣下的致命陷阱：別讓無知斷送你的血汗錢與未來！",
            "「節稅神單」的真相：小心！你可能正步入精心設計的財務絞索！",
            "保險稅務話術大揭底：從業人員的違規深淵與消費者的權益火線！"
        ];
        let subtitleIndex = 0;
        const subtitleElement = document.querySelector('#subtitle-carousel p');
        
        function changeSubtitle() {
            subtitleElement.parentElement.style.opacity = '0';
            setTimeout(() => {
                subtitleIndex = (subtitleIndex + 1) % subtitles.length;
                subtitleElement.textContent = `▶ ${subtitles[subtitleIndex]}`;
                subtitleElement.parentElement.style.opacity = '1';
            }, 500);
        }
        if(subtitleElement) {
            subtitleElement.textContent = `▶ ${subtitles[0]}`;
            setInterval(changeSubtitle, 5000);
        }

        // 2. 固定導航欄
        const stickyNav = document.getElementById('sticky-nav');
        const heroSection = document.querySelector('header');
        if (stickyNav && heroSection) {
            const observer = new IntersectionObserver(
                ([e]) => {
                    if (e.isIntersecting) {
                        stickyNav.classList.add('-translate-y-full');
                    } else {
                        stickyNav.classList.remove('-translate-y-full');
                    }
                },
                { threshold: 0.1 } 
            );
            observer.observe(heroSection);
        }
        
        // 3. 手風琴效果 (致命陷阱)
        const accordionItems = document.querySelectorAll('.accordion-item');
        accordionItems.forEach(item => {
            const header = item.querySelector('.accordion-header');
            const content = item.querySelector('.accordion-content');
            const icon = item.querySelector('.accordion-icon');
            header.addEventListener('click', () => {
                const isOpen = content.style.maxHeight && content.style.maxHeight !== '0px';
                if (isOpen) {
                    content.style.maxHeight = '0px';
                    icon.style.transform = 'rotate(0deg)';
                } else {
                    content.style.maxHeight = content.scrollHeight + 'px';
                    icon.style.transform = 'rotate(45deg)';
                }
            });
        });

        // 4. 案例卡片展開/收合
        const caseCards = document.querySelectorAll('.case-card');
        caseCards.forEach(card => {
            const toggles = card.querySelectorAll('.case-toggle');
            const summary = card.querySelector('.case-summary');
            const details = card.querySelector('.case-details');

            toggles.forEach(toggle => {
                toggle.addEventListener('click', () => {
                    summary.classList.toggle('hidden');
                    details.classList.toggle('hidden');
                });
            });
        });
        
        // 5. 互動式測驗
        const quizContainer = document.getElementById('quiz-container');
        if (quizContainer) {
            const options = quizContainer.querySelectorAll('.quiz-option');
            const submitBtn = document.getElementById('submit-quiz');
            const retakeBtn = document.getElementById('retake-quiz');
            const questionsDiv = document.getElementById('quiz-questions');
            const resultsDiv = document.getElementById('quiz-results');

            options.forEach(option => {
                option.addEventListener('click', () => {
                    const questionGroup = option.parentElement;
                    questionGroup.querySelectorAll('.quiz-option').forEach(opt => opt.classList.remove('selected'));
                    option.classList.add('selected');
                });
            });

            submitBtn.addEventListener('click', () => {
                let score = 0;
                const answered = quizContainer.querySelectorAll('input[type="radio"]:checked');
                if (answered.length < 3) {
                    alert('請回答所有問題！');
                    return;
                }

                answered.forEach(input => {
                    score += parseInt(input.value);
                });
                
                questionsDiv.classList.add('hidden');
                resultsDiv.classList.remove('hidden');

                // 隱藏所有結果
                resultsDiv.querySelectorAll('[id^="result-"]').forEach(el => el.classList.add('hidden'));

                if (score >= 5) { // 5-6分 高風險
                    document.getElementById('result-high').classList.remove('hidden');
                } else if (score >= 2) { // 2-4分 中風險
                    document.getElementById('result-mid').classList.remove('hidden');
                } else { // 0-1分 低風險
                    document.getElementById('result-low').classList.remove('hidden');
                }
            });
            
            retakeBtn.addEventListener('click', () => {
                questionsDiv.classList.remove('hidden');
                resultsDiv.classList.add('hidden');
                quizContainer.querySelectorAll('input[type="radio"]:checked').forEach(input => input.checked = false);
                options.forEach(opt => opt.classList.remove('selected'));
            });
        }
        
        // 6. 各方覺醒 (Tabs)
        const tabsContainer = document.getElementById('tabs-container');
        if (tabsContainer) {
            const tabs = tabsContainer.querySelectorAll('.tab');
            const contents = document.querySelectorAll('.tab-content');
            
            tabs.forEach(tab => {
                tab.addEventListener('click', () => {
                    // Update tab styles
                    tabs.forEach(t => {
                      t.classList.remove('active', 'accent-color');
                      t.classList.add('text-gray-400');
                    });
                    tab.classList.add('active', 'accent-color');
                    tab.classList.remove('text-gray-400');
                    
                    // Show content
                    const target = tab.getAttribute('data-tab');
                    contents.forEach(content => {
                        if (content.getAttribute('data-tab-content') === target) {
                            content.classList.remove('hidden');
                        } else {
                            content.classList.add('hidden');
                        }
                    });
                });
            });
        }
        
        // 7. 法律護身符 (Accordion)
        const lawItems = document.querySelectorAll('.law-item');
        lawItems.forEach(item => {
            const header = item.querySelector('.law-header');
            const content = item.querySelector('.law-content');
            const icon = item.querySelector('.law-icon');
            header.addEventListener('click', () => {
                const isHidden = content.classList.contains('hidden');
                if (isHidden) {
                    content.classList.remove('hidden');
                    icon.style.transform = 'rotate(45deg)';
                } else {
                    content.classList.add('hidden');
                    icon.style.transform = 'rotate(0deg)';
                }
            });
        });

    });
    </script>
</body>
</html>
