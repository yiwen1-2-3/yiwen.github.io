    <script>
    document.addEventListener('DOMContentLoaded', () => {

        // Scroll Reveal Animation
        const scrollElements = document.querySelectorAll('.scroll-reveal');
        const elementInView = (el, dividend = 1) => {
            const elementTop = el.getBoundingClientRect().top;
            return (
                elementTop <= (window.innerHeight || document.documentElement.clientHeight) / dividend
            );
        };
        const displayScrollElement = (element) => {
            element.classList.add('visible');
        };
        const hideScrollElement = (element) => {
             element.classList.remove('visible');
        }
        const handleScrollAnimation = () => {
            scrollElements.forEach((el) => {
                if (elementInView(el, 1.15)) {
                    displayScrollElement(el);
                }
            });
        };
        window.addEventListener('scroll', () => {
            handleScrollAnimation();
        });
        handleScrollAnimation(); // Initial check

        // Wealth Slider Interaction
        const wealthSlider = document.getElementById('wealth-slider');
        const iconAsset = document.getElementById('icon-asset');
        const iconWealth = document.getElementById('icon-wealth');
        const iconHome = document.getElementById('icon-home');
        const wealthText = document.getElementById('wealth-text');

        const wealthContent = [
            { threshold: 0, text: "「財產」進化至「財富」不僅依賴金融工具，更需健全的家庭治理、價值觀傳承與互信關懷。" },
            { threshold: 50, text: "保險作為「管理機制」，其有效性繫於規劃周全性及對人性弱點的預應。" },
            { threshold: 90, text: "人性的貪婪與輕信是財產安全的最大威脅，傳承需兼顧「留存」與「安全、智慧使用」。" }
        ];

        if(wealthSlider){
            wealthSlider.addEventListener('input', (e) => {
                const value = e.target.value;
                iconAsset.style.opacity = 1 - (value / 100);
                iconAsset.style.transform = `scale(${1 - (value/200)})`;

                iconWealth.style.opacity = value / 100;
                iconWealth.style.transform = `scale(${value / 100}) rotate(${(value/100) * 360}deg) translateX(60px)`;

                iconHome.style.opacity = value / 100;
                iconHome.style.transform = `scale(${value / 100}) rotate(${-(value/100) * 360}deg) translateX(-60px)`;
                
                let currentText = wealthContent[0].text;
                for (const content of wealthContent) {
                    if (value >= content.threshold) {
                        currentText = content.text;
                    }
                }
                wealthText.textContent = currentText;
            });
        }
        
        // Flip Card Interaction
        const flipCard = document.getElementById('flip-card');
        const shieldText = document.getElementById('shield-text');
        const riskText = document.getElementById('risk-text');
        
        if(flipCard){
             flipCard.addEventListener('click', () => {
                flipCard.classList.toggle('is-flipped');
                shieldText.classList.toggle('hidden');
                riskText.classList.toggle('hidden');
            });
        }

        // Case Study Tabs
        const caseBtns = document.querySelectorAll('.case-btn');
        const caseDetails = document.querySelectorAll('.case-details');
        const caseContent = document.getElementById('case-content');

        caseBtns.forEach(btn => {
            btn.addEventListener('click', () => {
                const caseType = btn.dataset.case;

                // Update button styles
                caseBtns.forEach(b => {
                    b.classList.remove('bg-amber-500', 'text-white');
                    b.classList.add('bg-gray-700', 'text-gray-400');
                });
                btn.classList.add('bg-amber-500', 'text-white');
                btn.classList.remove('bg-gray-700', 'text-gray-400');

                // Fade out current content
                caseContent.style.opacity = 0;
                
                setTimeout(() => {
                    // Hide all details
                    caseDetails.forEach(detail => detail.classList.add('hidden'));
                    
                    // Show target detail
                    const targetDetail = document.getElementById(`${caseType}-content`);
                    if(targetDetail) {
                        targetDetail.classList.remove('hidden');
                    }
                    
                    // Fade in new content
                    caseContent.style.opacity = 1;
                }, 300);
            });
        });
        // Set initial active case
        if(caseBtns.length > 0) {
            caseBtns[0].click();
        }

    });
    </script>
</body>
</html>
